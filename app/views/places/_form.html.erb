<div class="new-issue-form-container clearfix">
  <div class="new-issue-form clearfix">
    <%= form_for @place do |f| %>
      <dl class="form">
        <dt><%= f.label :name %></dt>
        <dd><%= f.text_field :name %></dd>
      </dl>
      <dl class="form">
        <dt><%= f.label :owner %></dt>
        <dd><%= f.text_field :owner %></dd>
      </dl>
      <dl class="form">
        <dt><%= f.label :address %></dt>
        <dd><%= f.text_field :address %></dd>
      </dl>
      <dl class="form">
        <dt><%= f.label :capacity %></dt>
        <dd><%= f.number_field :capacity %></dd>
      </dl>
      <dl class="form">
        <dt><%= f.label :description %></dt>
        <dd><%= f.text_area :description %></dd>
      </dl>
      <p><%= f.submit :class => "submit-place-button btn btn-primary" %></p>
    <% end %>
  </div>
</div>